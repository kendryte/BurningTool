{
	"[jsonc]": {
		"editor.defaultFormatter": "vscode.json-language-features"
	},
	"[json]": {
		"editor.defaultFormatter": "vscode.json-language-features"
	},
	"cmake.sourceDirectory": "${workspaceFolder}",
	"cmake.buildDirectory": "${workspaceFolder}/build-vscode",
	"cmake.configureSettings": {
		"CMAKE_TOOLCHAIN_FILE": "${workspaceFolder}/vcpkg/scripts/buildsystems/vcpkg.cmake",
		"DISABLE_TERM_HYPERLINK": "yes",
	},
	"search.exclude": {
		"**/vcpkg": true,
		"**/build-*": true
	},
	"files.associations": {
		"*.h": "cpp",
		"iostream": "cpp",
		"*.tcc": "c",
		"exception": "c",
		"memory_resource": "c",
		"istream": "c",
		"new": "c",
		"ostream": "c",
		"stdexcept": "c",
		"streambuf": "c",
		"typeinfo": "c",
		"numbers": "c",
		"array": "c",
		"deque": "c",
		"string": "c",
		"unordered_map": "c",
		"vector": "c",
		"string_view": "c",
		"initializer_list": "c",
		"system_error": "c",
		"cstddef": "c",
		"list": "c",
		"cstdlib": "c",
		"atomic": "c",
		"compare": "c",
		"functional": "c",
		"tuple": "c",
		"type_traits": "c",
		"utility": "c",
		"random": "c",
		"cerrno": "c",
		"iosfwd": "c",
		"numeric": "c",
		"iterator": "c"
	}
}
